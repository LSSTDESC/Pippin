RESET_CIDOFF: 2
SIMLIB_MINOBS:  50

SIMLIB_FILE:  $DES_ROOT/simlibs/DES_DIFFIMG.SIMLIB
SIMLIB_MSKOPT: 16 #16 means no fluxerr_cor:

HOSTLIB_FILE: $DES_ROOT/fakeSN/LIBS/HOSTLIB_SVA2/DES_SVA2.HOSTLIB
HOSTLIB_MSKOPT: 258      # 2=galNoise 16=Zgal, 32=1 SN per gal
EXPOSURE_TIME:  1

CIDOFF:  0      # 2480 
FORMAT_MASK:  32
NGENTOT_LC: 45043


GENRANGE_TREST:   -15.0  65    # TrestMax matches actual fakes
GENRANGE_REDSHIFT:  0.12  1.45
GENSIGMA_REDSHIFT:  .001        # no redshift info in data file

SIMLIB_MINOBS 50


# -----------------------------------

SOLID_ANGLE: 0.009     # 30 sq deg
HOSTLIB_GENRANGE_NSIGZ: -3. +3.  # not yet implemented

HOSTLIB_GALID_NULL:  -20   # GALID for FIXMAG fake with no host

GENSOURCE:  RANDOM
GENMODEL:    SIMLIB
GENFILTERS:  griz
TGRIDSTEP_MODEL_INTERP: 4.0
GENRANGE_MWEBV: 0.0413 0.04131


KCOR_FILE:   $DES_ROOT/kcor/SpecIa_3yr/DES_Y3A2_noOOB.fits

# selection criteria for generation

GENPEAK_SALT2x1:     0.0
GENSIGMA_SALT2x1:    1.5   0.9
GENRANGE_SALT2x1:   -5.0   3.0

GENPEAK_SALT2c:     0.0
GENSIGMA_SALT2c:    0.08   0.14
GENRANGE_SALT2c:   -0.40   0.60

GENPEAK_SALT2ALPHA:   0.11
GENPEAK_SALT2BETA:    3.20

RANSEED: 70789       # random number seed

SEARCHEFF_PIPELINE_FILE: $SNDATA_ROOT/models/searcheff/SEARCHEFF_PIPELINE_DES.DAT
SEARCHEFF_PIPELINE_LOGIC_FILE: $SNDATA_ROOT/models/searcheff/SEARCHEFF_PIPELINE_LOGIC.DAT

NEWMJD_DIF: 0.4  # each detect epoch separated by 1 night
APPLY_SEARCHEFF_OPT: 1    # apply DiffImg trigger

APPLY_CUTWIN_OPT: 1
CUTWIN_NEPOCH:    3  -5.       # require 3 epochs (no S/N requirement)
CUTWIN_PEAKMAG:   10  27       # any filter with peakMag < 27
CUTWIN_REDSHIFT:  0.05 1.45

# cosmological params for lightcurve generation and redshift distribution
OMEGA_MATTER:  0.3
OMEGA_LAMBDA:  0.7
W0_LAMBDA:    -1.00
H0:           70.0   

SIMGEN_DUMPALL: 17  CID Z SIM_SEARCHEFF_MASK FIELD MWEBV
                    S2c S2x1 RA DECL MAGT0_g MAGT0_r MAGT0_i MAGT0_z
                    SNRMAX_g  SNRMAX_r SNRMAX_i SNRMAX_z 
